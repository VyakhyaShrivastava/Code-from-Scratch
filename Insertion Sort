#include<stdio.h>
#include<conio.h>
#define max 20
main()
{
	int i,j,n,temp,a[max];
	printf("Enter total elements(max %d ): ",max);
	scanf("%d",&n);
	printf("Enter %d elements\n ",n);
	for(i=0;i<n;i++)
	{
		printf("enter %d element : ",i+1);
		scanf("%d",&a[i]);
	}
	for(i=1;i<n;i++)
	{
		temp=a[i];
		j=i-1;
		while((temp<a[j])&&(j>=0))
		{
			a[j+1]=a[j];
			j=j-1;
		}
		a[j+1]=temp;
	}
	printf("After sorting: ");
	for(i=0;i<n;i++)
		printf(" %d",a[i]);
	getch();
}
